generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model compatible with Clerk
model User {
  id           String   @id // This will be the Clerk user ID
  email        String   @unique
  name         String?
  firstName    String?
  lastName     String?
  academicYear Int?
  school       String?
  courses      Course[]
  credits      Int      @default(20)
  createdAt    DateTime @default(now())

  // canvas integration
  canvasDomain    String?  // northeastern.instructure.com
  accessTokenHash  String?  // NEED TO HASH ASAP!!!
  isActive     Boolean  @default(false)
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Course {
  id          String   @id @default(cuid())
  name        String
  description String?
  code        String
  instructor  String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt


  canvasCourseId String? // optional, provided by canvas.....
  isFromCanvas Boolean @default(false)

  @@map("courses")
  Tasks Tasks[]
}


model Tasks {
  id String @id @default(cuid())
  title String
  description String? 
  dueDate DateTime? 
  pointsPossible Float? 
  courseId String

  // this kinda fucks shit up
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)



  // canvas stuff: 
  canvasAssignmentId String? 
  canvasHtmlUrl String? 
  isFromCanvas Boolean @default(false)



  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  
  @@map("tasks")
}