generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model compatible with Clerk
model User {
  id           String   @id // This will be the Clerk user ID
  email        String   @unique
  name         String?
  firstName    String?
  lastName     String?
  academicYear Int?
  school       String?
  courses      Course[]
  credits      Int      @default(20)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
  
  CanvasIntegration CanvasIntegration[]
}

model Course {
  id          String   @id @default(cuid())
  name        String
  description String?
  code        String
  instructor  String
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("courses")
}


// backend/prisma/schema.prisma
model CanvasIntegration {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  canvasUrl   String   // e.g., "https://school.instructure.com"
  accessToken String   // encrypted token
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("canvas_integrations")
}